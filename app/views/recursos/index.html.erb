<p id="notice"><%= notice %></p>
<div class="content-wrapper">
  <h3 class="text-primary mb-4">Lista de Recursos</h3>
  <div class="row mb-2">
      <div class="col-lg-12">

<h1>Recursos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Clase</th>
      <th>Tipo</th>
      <th>Matricula</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recursos.each do |recurso| %>
      <tr>
        <td><%= recurso.nombre %></td>
        <td><%= recurso.clase %></td>
        <td><%= recurso.tipo %></td>
        <td><%= recurso.matricula %></td>
        <td><%= recurso.estado %></td>
        <td><%= link_to 'Mostrar', recurso , :class => 'btn btn-primary'%></td>
        <td><%= link_to 'Editar', edit_recurso_path(recurso) , :class => 'btn btn-warning'%></td>
        <td><%= link_to 'Eliminar', recurso, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Recurso', new_recurso_path , :class => 'btn btn-success'%>
