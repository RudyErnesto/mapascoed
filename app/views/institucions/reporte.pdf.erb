<!DOCTYPE html>
<html lang="en">
<head>

</head>

<body>
<h1>Incidentes</h1>
<%= wicked_pdf_image_tag "logo_star_black.png" %>
<p id="notice"><%= notice %></p>
<div class="content-wrapper", style='width: 100%';>
    <h3 class="text-primary mb-4">Instituciones</h3>
    <div class="row mb-2", style='width: 100%;'>
        <div class="col-lg-12">
            <div class="card">
                <div class="card-block", style='width: 800px;'>
                    <h5 class="card-title mb-4">Informacion de Instituciones</h5>


<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Personaencargada</th>
      <th>Cargo</th>
      <th>Direccion</th>
      <th>Departamento</th>
   
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @institucions.each do |institucion| %>
      <tr>
        <td><%= institucion.nombre %></td>
        <td><%= institucion.personaencargada %></td>
        
        <td><%= link_to 'Mostrar', institucion, :class => 'btn btn-outline-primary'%></td>
        <td><%= link_to 'Editar', edit_institucion_path(institucion), :class => 'btn btn-outline-warning'%></td>
        <td><%= link_to 'Eliminar', institucion, method: :delete, data: { confirm: 'Are you sure?' } ,:class => 'btn btn-outline-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Institucion', new_institucion_path, :class => 'btn btn-outline-info'%>
</body>