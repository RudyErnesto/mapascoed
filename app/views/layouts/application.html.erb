      <div class="navbar-header">
        <a class="navbar-brand" href="/">Zooe</a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
        <% if user_signed_in? %>
          <li>  <%= link_to 'Mascotas', publico_mascota_path %></li>
          <li>  <%= link_to 'Noticias', public_noticia_path %></li>
          <li><%= link_to('Editar Perfil', edit_user_registration_path) %></li> 
