                      <li>  <%= link_to 'Recursos', recursos_path , :class => 'btn btn-outline-info'%></li>
                      <li><%= link_to 'Organizaciones', organizacions_path , :class => 'btn btn-outline-info'%></li>
                      <li><%= link_to 'Incidentes', locations_path , :class => 'btn btn-outline-info'%></li>
                      <li><%= link_to 'Recursos Usados', recurso_eventos_path , :class => 'btn btn-outline-info'%></li>
                    </div>
                  </nav>
    <%= yield %>
