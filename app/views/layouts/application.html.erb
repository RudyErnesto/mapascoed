        <% else %>
          <li>  <%= link_to 'Mascotas', publico_mascota_path %></li>
          <li>  <%= link_to 'Noticias', public_noticia_path %></li>
          <li>  <%= link_to 'Veterinaria', veterinaria_path %></li>
          <li ><%= link_to('Registrarse', new_user_registration_path) %></li>
          <li ><%= link_to('Login', new_user_session_path)  %></li>

        <% end %>
        </ul>
      </div>
   
          <!--End navbar-->
          
          <div class="container-fluid">
              <div class="row row-offcanvas row-offcanvas-right">
                  <nav class="bg-white sidebar sidebar-fixed sidebar-offcanvas" id="sidebar">
                  <div class="user-info">
                      <img src="/assets/face.jpg" alt="">
                      <p class="name">Pamela Navia</p>
                      <p class="designation">Encargada</p>
                      <span class="online"></span>
                  </div>
                  <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                  
                      <ul class="nav">
