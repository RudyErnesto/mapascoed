<p id="notice"><%= notice %></p>
<div class="content-wrapper">
  <h3 class="text-primary mb-4">Lista de Organizaciones</h3>
  <div class="row mb-2">
      <div class="col-lg-12">
<h1>Organizaciones</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Numerocontacto</th>
      <th>Telefono</th>
      <th>Correo</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizacions.each do |organizacion| %>
      <tr>
        <td><%= organizacion.nombre %></td>
        <td><%= organizacion.numerocontacto %></td>
        <td><%= organizacion.telefono %></td>
        <td><%= organizacion.correo %></td>
      
        <td><%= link_to 'Mostrar', organizacion , :class => 'btn btn-primary'%></td>
        <td><%= link_to 'Editar', edit_organizacion_path(organizacion) , :class => 'btn btn-warning'%></td>
        <td><%= link_to 'Eliminar', organizacion, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Organizacion', new_organizacion_path , :class => 'btn btn-success'%>
